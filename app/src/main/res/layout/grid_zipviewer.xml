<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/zipview_grid_img1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_below="@+id/zipview_grid_img1"
            android:id="@+id/zipview_grid_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="파일 명"
            android:textSize="16sp"
            android:lines="1"
            android:gravity="center"/>
        <TextView
            android:layout_below="@+id/zipview_grid_filename"
            android:id="@+id/zipview_grid_filesize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            />
        <CheckBox
            android:id="@+id/zipview_grid_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/zipview_grid_filename"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            />
    </RelativeLayout>



</RelativeLayout>